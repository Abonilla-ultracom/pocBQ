pipeline{
    agent any
    environment {
        GCP_ACCOUNT = credentials('jenkins_secret')
    }
    stages {
        stage('Authentication'){
            steps {
                withCredentials([string(credentialsId: GCP_ACCOUNT, variable: 'client_email')]) {
                    sh 'gcloud auth activate-service-account --key-file=$GCP_ACCOUNT'
                }
            }
        }
        stage('Connection') {
            steps {
                sh 'gcloud config set project <GCP PROJECT NAME>'
            }
        }
    }
}