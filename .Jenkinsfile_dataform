pipeline {
    agent {
        docker {
            image 'gcr.io/cloud-builders/gcloud'
            args 'auth activate-service-account --key-file=jenkins-sa-key.json'
        }
    }
    stages {
        stage('Connect to GCP') {
            steps {
                sh 'gcloud config set project [poc-ci-cd-375313]'
            }
        }
    }
}